{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "skipLibCheck": true,
    "noEmitOnError": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "dist", 
    "tests/**/*", 
    "**/*.test.ts", 
    "**/*.test.js", 
    "**/*.spec.ts", 
    "**/*.spec.js",
    "**/node_modules/**/*"
  ]
}
