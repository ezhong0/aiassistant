{
  "name": "assistantapp",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "test": "node --max-old-space-size=1024 --expose-gc node_modules/.bin/jest --runInBand",
    "test:watch": "node --max-old-space-size=512 --expose-gc node_modules/.bin/jest --watch --runInBand",
    "test:coverage": "node --max-old-space-size=1536 --expose-gc node_modules/.bin/jest --coverage --runInBand",
    "test:unit": "node --max-old-space-size=512 --expose-gc node_modules/.bin/jest tests/unit --runInBand",
    "test:integration": "node --max-old-space-size=1024 --expose-gc node_modules/.bin/jest tests/integration --runInBand",
    "test:ai-behavior": "node --max-old-space-size=1024 --expose-gc node_modules/.bin/jest tests/ai-behavior --runInBand",
    "test:intent": "node --max-old-space-size=512 --expose-gc node_modules/.bin/jest tests/ai-behavior/intent-recognition --runInBand",
    "test:workflow": "node --max-old-space-size=512 --expose-gc node_modules/.bin/jest tests/ai-behavior/workflow-validation --runInBand",
    "test:context": "node --max-old-space-size=512 --expose-gc node_modules/.bin/jest tests/ai-behavior/context-continuity --runInBand",
    "test:errors": "node --max-old-space-size=512 --expose-gc node_modules/.bin/jest tests/ai-behavior/error-recovery --runInBand",
    "test:decisions": "node --max-old-space-size=512 --expose-gc node_modules/.bin/jest tests/ai-behavior/decision-quality --runInBand",
    "test:simple": "node --max-old-space-size=256 --expose-gc node_modules/.bin/jest tests/unit/simple.test.ts --runInBand",
    "test:ai-fast": "npx ts-node scripts/run-ai-behavior-tests.ts",
    "test:example": "node --max-old-space-size=256 --expose-gc node_modules/.bin/jest tests/unit/example.test.ts --runInBand",
    "test:master": "node --max-old-space-size=512 --expose-gc node_modules/.bin/jest tests/unit/agents/master-agent.test.ts --runInBand",
    "test:comprehensive": "node --max-old-space-size=1024 --expose-gc node_modules/.bin/jest tests/integration/comprehensive.test.ts --runInBand",
    "cli": "node dist/scripts/cli-test.js",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/uuid": "^10.0.0",
    "axios": "^1.11.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "google-auth-library": "^10.2.1",
    "googleapis": "^156.0.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "openai": "^5.13.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.0.17"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
